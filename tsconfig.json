{
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "rootDir": "./",
    "types": ["node"]
  }
}
